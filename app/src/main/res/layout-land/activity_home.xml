<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    tools:context="com.example.christanismerilbanzouzi.bance_project.HomeActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleNews"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="208dp"
            android:layout_height="230dp"
            android:contentDescription="@string/vestSanCapuche"
            android:src="@drawable/pull_bance_noir_sans_capuche" />

        <TextView
            android:id="@+id/description"
            android:layout_width="284dp"
            android:layout_height="142dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginStart="245dp"
            android:layout_marginTop="-225dp"
            android:text="@string/descriptionveste"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/goShop"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-70dp"
            android:layout_marginStart="320dp"
            android:background="@color/colorBlack"
            android:text="@string/aller_au_shop"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/articleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_collection"
            android:layout_marginBottom="240dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/articlePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currentDate" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:text="@string/promotitle"
        android:textColor="@color/colorBlack"
        android:textSize="50sp"
        android:textStyle="bold" />



</RelativeLayout>
